variable "vpc_id" {
  description = "The ID of the VPC"
  type        = string
}

variable "aws_sg_dynamic_name" {
  description = "Name tag for the dynamic security group"
  type        = string
  default     = "dynamic_sg"
}

# Ingress Rules - list of objects with from_port, to_port, protocol, and cidr_blocks
variable "ingress_rules" {
  description = "List of ingress rules"
  type = list(object({
    from_port   = number
    to_port     = number
    protocol    = string
    cidr_blocks = list(string)
  }))
  default = [
    {
      from_port   = 80
      to_port     = 80
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    },
    {
      from_port   = 443
      to_port     = 443
      protocol    = "tcp"
      cidr_blocks = ["0.0.0.0/0"]
    }
  ]
}

# Egress Rules - list of objects with from_port, to_port, protocol, and cidr_blocks
variable "egress_rules" {
  description = "List of egress rules"
  type = list(object({
    from_port   = number
    to_port     = number
    protocol    = string
    cidr_blocks = list(string)
  }))
  default = [
    {
      from_port   = 0
      to_port     = 0
      protocol    = "-1"
      cidr_blocks = ["0.0.0.0/0"]
    }
  ]
}